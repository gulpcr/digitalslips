# ================================
# APPLICATION CONFIGURATION
# ================================
APP_NAME=Precision Receipt
APP_VERSION=1.0.0
NODE_ENV=development
API_VERSION=v1
PORT=8000
DEBUG=true

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://precision:precision123@localhost:5432/precision_receipt
DB_HOST=localhost
DB_PORT=5432
DB_NAME=precision_receipt
DB_USER=precision
DB_PASSWORD=precision123
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
DB_ECHO=false

# ================================
# AUTHENTICATION & SECURITY
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing
PASSWORD_HASH_SCHEME=bcrypt
BCRYPT_ROUNDS=12

# Encryption
ENCRYPTION_KEY=your-encryption-key-must-be-32-bytes-long-exactly!!

# Session
SESSION_SECRET=your-session-secret-key-change-in-production
SESSION_TIMEOUT_SECONDS=3600
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION_SECONDS=1800

# ================================
# CORS CONFIGURATION
# ================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=*

# ================================
# WHATSAPP INTEGRATION
# ================================
WHATSAPP_ENABLED=true
WHATSAPP_API_URL=https://api.whatsapp.com/v1
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# ================================
# SMS INTEGRATION (Twilio)
# ================================
SMS_ENABLED=true
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ================================
# EMAIL CONFIGURATION
# ================================
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@meezanbank.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@meezanbank.com
SMTP_FROM_NAME=Meezan Bank - Precision Receipt

# ================================
# T24 CORE BANKING INTEGRATION
# ================================
T24_ENABLED=true
T24_API_URL=https://t24-api.meezanbank.com
T24_API_KEY=your-t24-api-key
T24_TIMEOUT_SECONDS=30

# ================================
# FILE STORAGE
# ================================
STORAGE_TYPE=local
# Options: local, s3, azure, gcs

# Local Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10

# AWS S3 (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=precision-receipt-files

# ================================
# RECEIPT CONFIGURATION
# ================================
RECEIPT_QR_EXPIRY_HOURS=24
RECEIPT_PDF_ENABLED=true
RECEIPT_BLOCKCHAIN_ENABLED=true
RECEIPT_BLOCKCHAIN_NETWORK=ethereum-mainnet

# Blockchain
BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/your-project-id
BLOCKCHAIN_CONTRACT_ADDRESS=0x...

# ================================
# TRANSACTION LIMITS
# ================================
DEFAULT_DAILY_LIMIT=500000.00
DEFAULT_MONTHLY_LIMIT=5000000.00
TRANSACTION_FEE_PERCENTAGE=0.01
MIN_TRANSACTION_FEE=10.00
MAX_TRANSACTION_FEE=1000.00

# ================================
# FRAUD DETECTION
# ================================
FRAUD_DETECTION_ENABLED=true
FRAUD_THRESHOLD_SCORE=0.75
AUTO_BLOCK_SUSPICIOUS=false

# ================================
# LOGGING
# ================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json
LOG_FILE=logs/precision-receipt.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# ================================
# MONITORING & ANALYTICS
# ================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ================================
# REDIS (for caching/sessions)
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=true

# ================================
# TIMEZONE
# ================================
TIMEZONE=Asia/Karachi

# ================================
# FEATURE FLAGS
# ================================
ENABLE_SWAGGER_DOCS=true
ENABLE_AUDIT_LOGS=true
ENABLE_NOTIFICATIONS=true
ENABLE_QR_CODES=true
ENABLE_BIOMETRIC_AUTH=false
